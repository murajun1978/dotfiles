set-option -g default-terminal screen-256color
set -g terminal-overrides 'xterm:colors=256'

set -g prefix C-a

set -s escape-time 1
set -g base-index 1
setw -g pane-base-index 1

bind-key -n C-r source-file ~/.tmux.conf \; display "Reloaded!"

set -g message-bg colour235
set -g message-fg colour166
set -g message-attr bright

set -g status-bg colour235
set -g status-fg colour136
set -g status-attr default
set -g status-left "#[fg=green]#S #[fg=yellow]#I #[fg=cyan]#P"
set -g status-right "#[fg=cyan]%d %b %R"
set -g status-interval 60

setw -g window-status-fg colour244
setw -g window-status-bg default
setw -g window-status-attr dim
setw -g window-status-current-fg colour166
setw -g window-status-current-bg default
setw -g window-status-current-attr bright

set -g status-justify centre
set -g visual-activity on
setw -g monitor-activity on

set -g pane-border-fg colour235
set -g pane-active-border-fg colour025
set -g display-panes-active-colour colour166
set -g display-panes-colour colour069

setw -g clock-mode-colour colour64

# split window
bind | split-window -h
bind - split-window -v

# move winodws
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# changed window size
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

set-option -g default-shell "/usr/bin/fish"
